@{
    Layout = null;
}
@model Application.Entity.Model.Product;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product</title>
    <!-- Link to your external CSS file -->
    <link rel="stylesheet" href="~/css/AddProduct.css" />
</head>
<body>
    <div class="container">
        <div class="header">
            <h2>Create Account</h2>
        </div>
        <form asp-controller="Product" asp-action="AddProduct" class="form">
            <div class="form-control">
                <label asp-for="Name">Name</label>
                <input type="text" placeholder="Product Name" asp-for="Name" />
                <i class="fas fa-check-circle"></i>
                <i class="fas fa-exclamation-circle"></i>
                <span asp-validation-for="Name"></span>
            </div>

            <div class="form-control">
                <label asp-for="Quantity">Quantity</label>
                <input type="number" placeholder="Product Quantity" asp-for="Quantity" />
                <i class="fas fa-check-circle"></i>
                <i class="fas fa-exclamation-circle"></i>
                <span asp-validation-for="Quantity"></span>
            </div>
            <div class="form-control">
                <label asp-for="Price">Price</label>
                <input type="Price" placeholder="Price" asp-for="Price" />
                <i class="fas fa-check-circle"></i>
                <i class="fas fa-exclamation-circle"></i>
                <span asp-validation-for="Price"></span>
            </div>

            <button>Submit</button>
        </form>
    </div>
</body>
</html>
